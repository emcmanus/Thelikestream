<!-- Page -->
<% if @page %>
    <!-- Facebook Open Graph -->
    <meta property="og:title" content="<%= h @page.og_title || @html_title || "TheLikeStream - #{controller.controller_name.titleize}" %>" />
    <meta property="og:image" content="<%= h @page.og_image || image_url("like-72-72.png") %>" />
    <meta property="og:url" content="<%= h @page.og_url || page_url(@page, :only_path => false) %>" />
    <meta property="og:description" content="<%= h @page.og_description || "You'll love this" %>" />
    <meta name="title" content="<%= h @page.og_title || @html_title || "TheLikeStream - #{controller.controller_name.titleize}" %>" />
    <meta name="description" content="<%= h @page.og_description || "You'll love this" %> " />
    <link rel="image_src" href="<%= h @page.og_image || image_url("like-72-72.png") %>" / >
<% else %>
    <meta property="og:title" content="<%= @html_title || "TheLikeStream - #{controller.controller_name.titleize}" %>" />
    <meta property="og:image" content="<%= h image_url("like-72-72.png") %>" />
    <meta property="og:url" content="<%=h request.url %>" />
    <meta property="og:description" content="You'll love this" />
    <meta name="title" content="<%= @html_title || "TheLikeStream - #{controller.controller_name.titleize}" %>" />
    <meta name="description" content="You'll love this" />
    <link rel="image_src" href="<%= h image_url("like-72-72.png") %>
<% end %>
<% if @page and @page.is_cloaked %>
    <meta property="og:type" content="activity" />
    <meta property="og:site_name" content="★" />
    <meta property="og:app_id" content="157023087646197">
<% else %>
    <% if false %>
        <meta property="og:type" content="article" />
        <meta property="og:site_name" content="TheLikeStream" />
        <meta property="og:app_id" content="115776415143563" />
        <meta property="fb:admins" content="904678" />
    <% else %>
        <meta property="og:type" content="activity" />
        <meta property="og:site_name" content="★TheLikeStream" />
        <meta property="og:app_id" content="115776415143563" />
