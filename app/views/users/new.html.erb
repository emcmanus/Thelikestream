<h2>New user</h2>

<script type="text/javascript" charset="utf-8">
    function changeNewUserId(newId){
        $('fbNewUserName').innerHTML = "<fb:name uid='"+newId+"'></fb:name>";
        FB.XFBML.parse(document.getElementById('fbNewUserName'));
    }
</script>
<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <b>Facebook id: </b> (live update)<br/>
    <%= f.text_field :facebook_id, :onkeyup=>'javascript:changeNewUserId(this.value)' %><br/>
    <span id="fbNewUserName"></span>
  </p>
  
  <p>
     <%= f.label :can_admin %><br />
     <%= f.check_box :can_admin %>
 </p>
     
 <p>
     <%= f.label :can_edit_raw_html %><br />
     <%= f.check_box :can_edit_raw_html %>
 </p>
 
 <p>
     <%= f.label :is_puppet %><br />
     <%= f.check_box :is_puppet %>
 </p>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>