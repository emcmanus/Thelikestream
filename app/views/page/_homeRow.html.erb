<span style="font-size: 1.2em;">
	<div class="span-3">
	    <% unless page.thumbnail_thumb.blank? %>
    		<div style="overflow: hidden; width: 100px; height: 70px;"
    			<%= link_to image_tag(page.thumbnail_thumb), page %>
    		</div>
    	<% else %>
            <!-- TODO: Default thumb -->
            &nbsp;
		<% end %>
	</div>
    <div class="span-2"><%= render :partial=>'/layouts/likeButtonSquareCounter', :locals=>{:page=>page} %></div>
    <div class="span-8">
        <h4 style="padding:0; margin:0;">
            <%= link_to truncate(page.title, :length=>100), page_url(page), :class=>"mainlink" %>
        </h4>
		<span style="color:#666; font-size:0.8em;">
			<% if page.introduction.blank? %>
			    <% unless strip_tags(page.html_body).blank? %>
				    <%=h truncate(strip_tags(page.html_body), :length=>140) %> <%= link_to image_tag('view-page.png'), page %><br/>
				<% end %>
			<% else %>
				<%=h truncate(strip_tags(page.introduction), :length=>140) %> <%= link_to image_tag('view-page.png'), page %><br/>
			<% end %>
		</span>
		<span style="font-size: 0.8em; color: #ccc;">
	        Shared by <%= link_to fb_name(page.user, :linked=>"false"), page.user, :style=>"color:#7f7f7f;" %> <%= distance_of_time_in_words page.created_at, Time.now %> ago. 
	        <% unless page.source_url.blank? %>
	            | <%= link_to "Source", page.source_url, :style=>"color:#7f7f7f;" %>
	        <% end %>
	        <% if current_user && current_user.is_content_editor %>
	            | <%= link_to 'Edit', edit_page_path(page), :style=>"color:#7f7f7f;" %>
	        <% end %>
	    </span>
    </div>
</span>

<hr class="space" />