<span style="font-size: 1.2em;">
    <div class="span-2"><%= render :partial=>'/layouts/likeButtonSmall', :locals=>{:page=>page} %></div>
    <div class="prepend-2">
        <h4 style="padding:0;margin:0;">
            <%= link_to truncate(page.title, :length=>100), page_url(page), :class=>"quotelink" %>
        </h4>
    </div>
    <div class="prepend-2" style="font-size: 0.7em; color: #ccc;">
        Shared by <%= link_to fb_name(page.user, :linked=>"false"), page.user %> <%= distance_of_time_in_words page.created_at, Time.now %> ago. 
        <% unless page.source_url.blank? %>
            | <%= link_to "Source", page.source_url %>
        <% end %>
        <% if current_user && current_user.is_content_editor %>
            | <%= link_to 'Edit', edit_page_path(page) %>
        <% end %>
    </div>
</span>

<hr class="space" />